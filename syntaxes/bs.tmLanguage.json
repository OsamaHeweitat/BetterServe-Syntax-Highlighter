{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BetterServe",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#parentheses"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bs",
				"match": "\\b(GET|FROM|OUTPUT|END|AS|STORE|WHEN|LOAD|IF|OTHERWISE|NUM|LENGTH|ON|INNER|LEFT|RIGHT|FULL|CARTESIAN|UNION|INTERSECT|ORDER|GROUPING|TRANSPOSE|NOT|TRUE|FALSE|AND|OR|XOR)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bs",
					"match": "\"(?:[^\"\\\\]|\\\\.)*\""
				}
			]
		},
		"comments": {
			"patterns": [
				{
				  "match": "#.*$",
				  "name": "comment.line.number-sign.plc"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
				  "match": "\\b\\d+\\b",
				  "name": "constant.numeric.plc"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.plc",
					"match": "[+\\-*/=<>^.]"
				}
			]
		},
		"parentheses": {
			"patterns": [
				{
					"name": "punctuation.definition.grouping.plc",
					"match": "[()]"
				}
			]
		}
	},
	"scopeName": "source.bs"
}
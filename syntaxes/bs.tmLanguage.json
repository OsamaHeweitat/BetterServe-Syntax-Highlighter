{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BetterServe",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#keyword_operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#parentheses"
		},
		{
			"include": "#essential"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bs",
				"match": "\\b(AS|STORE|WHEN|LOAD|IF|OTHERWISE|ORDER|GROUPING|TRANSPOSE|NOT|TRUE|FALSE)\\b"
			}]
		},
		"keyword_operators": {
			"patterns": [
				{
					"name": "keyword.operator.bs",
					"match": "\\b(AND|OR|XOR|UNION|INTERSECT|CARTESIAN|LEFT|INNER|RIGHT|FULL|ON)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.bs",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bs",
					"match": "\"(?:[^\"\\\\]|\\\\.)*\""
				}
			]
		},
		"comments": {
			"patterns": [
				{
				  "match": "#.*?(?=;)",
				  "name": "comment.line.number-sign.bs"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
				  "match": "\\b\\d+\\b",
				  "name": "constant.numeric.bs"
				},
				{
				  "match": "\\b(NUM|LENGTH|ORD_OF)\\b",
				  "name": "constant.numeric.bs"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.bs",
					"match": "[+\\-*/=<>^.]"
				}
			]
		},
		"parentheses": {
			"patterns": [
				{
					"name": "punctuation.definition.grouping.bs",
					"match": "[()]"
				}
			]
		},
		"essential": {
			"patterns": [
				{
					"name": "keyword.other.bs",
					"match": "\\b(GET|FROM|OUTPUT|END|AS|STORE|WHEN|LOAD|IF|OTHERWISE|NUM|LENGTH|ORDER|GROUPING|TRANSPOSE|NOT|TRUE|FALSE)\\b"
				}
			]
		}
	},
	"scopeName": "source.bs"
}